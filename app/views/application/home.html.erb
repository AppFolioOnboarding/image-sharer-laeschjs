<h1 id="flash_message"><%= flash[:notice] %></h1>

<div id="images">
  <% @images.each do |image| %>
    <h1>URL: <%= image.url %></h1>
    <img src=<%= image.url %> width="400px" />
    Tags:
    <% image.tags.each do |tag| %>
      <%= link_to tag.name, root_path(search: { tag: tag.name }), class: 'image_tag' %><%
      unless image.tags.last.name == tag.name %>,<% end %>
    <% end %>
  <% end %>
</div>
